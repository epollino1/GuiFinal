@model IEnumerable<FitnisTracker.Models.UserModel>

@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html>
<head>
    <title>FitnisTracker - Home</title>

</head>
<body>

    
    <main>

        <section>
            @*<h2>Welcome, @Html.DisplayFor(modelItem => item.Name)!</h2>*@
            <p>Track your calorie consumption and weight progress with FitnisTracker.</p>
        </section>


        <!-- Add this section inside your Log Your Food section -->
        <p>
            <a asp-action="Edit">Log Your Food</a>
        </p>
        <table class="table">

            <!-- Food entry form -->
            <thead>
                <tr>
                    <th>
                        @*@Html.DisplayTextFor()*@
                    </th>
                <label for="foodName">Food Name:</label>
                <input type="text" id="foodName" name="foodName" required>

                <!-- Quantity -->
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" required>

                <!-- Calories -->
                <label for="calories">Calories:</label>
                <input type="number" id="calories" name="calories" required>

                <!-- Submit Button -->
                <button type="submit">Log Food</button>
                </tr>
                
            </thead>
        </table>


        <!-- calorie indicator section -->
        <section>
            <h2>Calorie Indicator</h2>
            @*<p>Remaining Calories: @Html.DisplayNameFor(model => model.CalorieLimit)</p>*@
            <!-- visual indicator / progress bar here -->
        </section>

        <!-- weight log section -->
        <section>
            <h2>Weight Log</h2>
            <!-- Add weight log form elements here -->
            <!-- Display weight loss/gain summary or progress chart or somethin idk -->
        </section>


        <section>
            <p>Ready to achieve your fitness goals? Log your progress now!</p>
            <a href="#">Log Food</a> <!-- Link to the food log page -->
        </section>
    </main>

    

</body>
</html>
