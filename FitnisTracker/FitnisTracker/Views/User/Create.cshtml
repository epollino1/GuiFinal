@model FitnisTracker.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartingWeight" class="control-label">Starting Weight</label>
                <input asp-for="StartingWeight" class="form-control" />
                <span asp-validation-for="StartingWeight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentWeight" class="control-label">Current Weight</label>
                <input asp-for="CurrentWeight" class="form-control" />
                <span asp-validation-for="CurrentWeight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DesiredWeight" class="control-label">Desired Weight</label>
                <input asp-for="DesiredWeight" class="form-control" />
                <span asp-validation-for="DesiredWeight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HeightIn" class="control-label">Height (inches)</label>
                <input asp-for="HeightIn" class="form-control" />
                <span asp-validation-for="HeightIn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label">Sex</label>
                <select asp-for="Gender" class="form-control">
                    <option value="Empty">Select A Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Birthday" class="control-label">Birthday</label>
                <input asp-for="Birthday" type="text" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Activity" class="control-label">Activity Level</label>
                <select asp-for="Activity" class="form-control">
                    <option value="Empty">Select Activity Level</option>
                    @foreach (var activityLevel in Enum.GetValues(typeof(FitnisTracker.Models.FitnisActivity)))
                    {
                        <option value="@activityLevel">@activityLevel</option>
                    }
                </select>
                <span asp-validation-for="Activity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="reset" value="Clear" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
